<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextTitle">
        <item name="android:textColor">@color/blue_900</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextDescription">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextDescription.Dark">
        <item name="android:textColor">@color/blue_700</item>
    </style>

    <style name="TextDescription.Light">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextDescription.Dark.ListTextOneLine">
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextDescription.Light.ListTextOneLine">
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextStep" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:background">@drawable/step_background</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/blue_700</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="EditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/blue_500</item>
        <item name="hintTextColor">@color/blue_700</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="IconDark">
        <item name="android:tint">@color/blue_800</item>
    </style>

    <style name="IconLight">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="SettingCardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPaddingLeft">8dp</item>
        <item name="contentPaddingRight">8dp</item>
    </style>
</resources>
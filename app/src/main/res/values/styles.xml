<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextTitle">
        <item name="android:textColor">@color/blue_900</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextDescription">
        <item name="android:textColor">@color/blue_700</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="TextStep" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:background">@drawable/step_background</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/blue_500</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="EditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/blue_500</item>
        <item name="hintTextColor">@color/blue_700</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>